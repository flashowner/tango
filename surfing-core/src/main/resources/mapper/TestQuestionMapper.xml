<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coco.tango.surfing.core.dal.mapper.TestQuestionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.coco.tango.surfing.core.dal.domain.TestQuestion">
        <id column="id" property="id" />
        <result column="content" property="content" />
        <result column="order_num" property="orderNum" />

        <result column="deleted" property="deleted" />
        <result column="create_datetime" property="createDatetime" />
        <result column="update_datetime" property="updateDatetime" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />


        <collection property="testQuestionChioces" javaType="java.util.ArrayList"
                    ofType="com.coco.tango.surfing.core.dal.domain.TestQuestionChioce">
            <result column="question_id" property="questionId"/>
            <result column="qu_content" property="content"/>
            <result column="qu_order_num" property="orderNum"/>
            <result column="order_char" property="orderChar"/>
        </collection>

    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, content, order_num, deleted, create_datetime, update_datetime, create_user, update_user
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        select qu.*,
               quc.content as qu_content,
               quc.order_num as qu_order_num,
               quc.question_id,
               quc.order_char
        from t_test_question qu left join t_test_question_chioce quc on qu.id=quc.question_id and quc.deleted = 0
        where qu.deleted = 0
    </select>

</mapper>
